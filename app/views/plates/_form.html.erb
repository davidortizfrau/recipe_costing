<%= form_for @plate do |f| %>
  
  <% if @plate.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@plate.errors.count, "error") %> prohibited this plate from being saved:</h2>

      <ul>
      <% @plate.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="col-md-4">
    <div class="form-group">
      <%= f.label :name %>
      <%= f.text_field :name, class: "form-control" %>
    </div>
    <div class="form-group">
      <%= f.label :plate_category_id %>
      <%= link_to "(Edit Categories)", plate_categories_path %>

      <%= f.select :plate_category_id, current_user.plate_categories.map{ |c| [c.name, c.id] }, {}, class: "form-control"  %>
    </div>
    <div class="form-group">
      <%= f.label :sales_price %><br />
      <%= f.text_field :sales_price, class: "form-control" %>
    </div>

    <%= f.hidden_field :user_id, value: current_user.id %>

    <div class="actions">
      <%= f.submit class: "btn btn-default" %>
    </div>
  </div>

    
  
<% end %>
